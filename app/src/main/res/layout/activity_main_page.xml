<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:layout_width="match_parent"
    android:background="@drawable/kariyer"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.melik.isbakdeneme.MainPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:baselineAligned="false"
        android:orientation="vertical">

        <Button
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Girişi"
            android:id="@+id/mainUserSignIn"
            android:onClick="myClickHandler"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="200dp"
            android:layout_gravity="center" />


        <Button
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:text="İşveren Girişi"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/mainEmployeurSignIn"
            android:onClick="myClickHandler"
            android:layout_marginTop="20dp"
            android:layout_gravity="center" />

        <Button
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:text="Kayit Ol"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/mainSignUp"
            android:onClick="myClickHandler"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"  />

    </LinearLayout>


</RelativeLayout>
